// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi","driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  username  String @id
  password String
  posts Post[]   
  vote Vote[]
  comment Comment[]
  commentVotes   CommentVote[]
}

model Post {
  idPost Int @id @default(autoincrement())
  title String
  description String
  author String
  creatorPost User @relation(fields: [author], references: [username])
  votes Vote[]
  comments Comment[]
  createdAt DateTime @default(now())
}

model Vote {
  type Int
  voterUsername String
  voter User @relation(fields: [voterUsername], references: [username])
  votePostId Int 
  postRel Post @relation(fields: [votePostId], references: [idPost]) 
  @@id([voterUsername, votePostId])
}

model Comment {
  idComment Int @id @default(autoincrement())
  body String
  author String
  autorComment User @relation(fields: [author], references: [username])
  postedOnId Int
  postedOn Post @relation(fields: [postedOnId], references: [idPost])
  CommentVote CommentVote[]
}

model CommentVote {
  id Int      @id @default(autoincrement())
  type Int  
  voterUsername String
  commentId Int      
  voter User @relation(fields: [voterUsername], references: [username])
  comment Comment @relation(fields: [commentId], references: [idComment])
  @@unique([voterUsername, commentId])  
}